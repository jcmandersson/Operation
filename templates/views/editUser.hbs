{{!< default}}
<div class="container">
  <form method="POST">
    {{#if editing}}
      <h2>Redigera användare</h2>
    {{else}}
      <h2>Skapa användare</h2>
    {{/if}}
    
    {{#if messages.success}}<div class="alert alert-success" role="alert">{{ messages.success }}</div>{{/if}}
    {{#if messages.info}}<div class="alert alert-info" role="alert">{{ messages.info }}</div>{{/if}}
    {{#if messages.warning}}<div class="alert alert-warning" role="alert">{{ messages.warning }}</div>{{/if}}
    {{#if messages.error}}<div class="alert alert-danger" role="alert">{{ messages.error }}</div>{{/if}}
    <div class="form-group row">
      <div class="col-md-6"><input type="text" name="firstname" class="form-control" placeholder="Förnamn" value="{{ editUser.name.first }}" required="required"></div>
      <div class="col-md-6"><input type="text" name="lastname" class="form-control" placeholder="Efternamn" value="{{ editUser.name.last }}" required="required"></div>
    </div>
    <div class="form-group">
      <input type="email" name="email" class="form-control" placeholder="E-post" value="{{editUser.email}}" required="required">
    </div>
    <div class="form-group row">
      <div class="col-md-6"><input type="password" name="password" class="form-control" placeholder="Lösenord" {{#unless editing}}required="required"{{/unless}}></div>
      <div class="col-md-6"><input type="password" name="confirm" class="form-control" placeholder="Upprepa lösenord" {{#unless editing}}required="required"{{/unless}}></div>
    </div>
    <div class="form-group">
      <label>
        <input type="checkbox" name="isAdmin" value="true" {{#if editUser.isAdmin }}checked="checked"{{/if}}> Administratör
      </label>
    </div>
    <div class="form-group">
      {{#if editing}}
        <button type="submit" class="btn btn-primary" name="action" value="edit">Redigera</button>
      {{else}}
        <button type="submit" class="btn btn-primary" name="action" value="register">Skapa användaren</button>
      {{/if}}
    </div>
  </form>
</div>
