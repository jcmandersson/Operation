{{!< default}}

<div id="container" class="row">
  <div class="col-md-4"></div>
  <form class="col-md-4" action="/login" method="POST">
{{#if messages.success}}<div class="alert alert-success" role="alert">{{ messages.success }}</div>{{/if}}
{{#if messages.info}}<div class="alert alert-info" role="alert">{{ messages.info }}</div>{{/if}}
{{#if messages.warning}}<div class="alert alert-warning" role="alert">{{ messages.warning }}</div>{{/if}}
    {{#if messages.error}}<div class="alert alert-danger" role="alert">{{ messages.error }}</div>{{/if}}
    
    <div class="form-group">
      <label for="emailInput">Email adress</label>
      <input type="email" class="form-control" id="emailInput" name="email" placeholder="Email">
    </div>
    <div class="form-group">
      <label for="passwordInput">Lösenord</label>
      <input type="password" class="form-control" id="passwordInput" name="password" placeholder="Lösenord">
    </div>
    <button type="submit" name="login" class="btn btn-default">Logga in</button>
  </form> 
  <div class="col-md-4"></div>
</div>
