{{!< default}}
<div class="container" xmlns="http://www.w3.org/1999/html">
    <form method="POST" class="operationForm">
        <div id="name">
            Namn:
            <input class="form-control" type="text" name="name" value="{{data.title}}" placeholder="Namn"/>
        </div>

        <div id="specialty">Specialitet: <input class="form-control" type="text" name="specialty" placeholder="Specialitet" value="{{data.specialty.name}}"/></div>

        <div id="synonyms">Synonymer: <input class="form-control" type="text" name="tags" placeholder="Synonymer" value="{{data.tags}}"/></div>

        <ul class="nav nav-pills">
          {{#each processes}}
              <button type="button" class="btn btn-default navbar-btn" id="{{@index}}">{{title}}</button>
          {{/each}}
            <button type="button" class="btn btn-default navbar-btn" id="checklist">Plocklista</button>
        </ul>

      {{#each processes}}
          <div class="process-content" id="content{{@index}}" style="{{#if @index}}display: none;{{/if}}">
            {{#each contents}}
                <div class="process-content-item">
                    <span class="contentTitle"><input class="form-control" type="text" value="{{ title }}"/></span>
                    <span class="contentText"><textarea>{{ text }}</textarea></span>
                </div>
            {{/each}}
              <div class="process-content-item">
                  <span class="contentTitle"><input class="form-control" type="text" value="" placeholder="Rubrik"/></span>
                  <span class="contentText"><textarea></textarea></span>
              </div>
              <!--{{#each prepares}}
            <div class="process-content-item">
                <span class="prepareTitle">{{title}}</span>
                <span class="prepareText">{{{text}}}</span>
            </div>
        {{/each}}-->
          </div>
      {{/each}}


      {{#if articles}}
          <div class="process-content" id="contentchecklist" style="display: none;">
              <table class="table">
                  <tr class="table-headerstriped">
                      <td></td>
                      <td>Namn</td>
                      <td>Antal</td>
                      <td>Förråd</td>
                      <td>Sektion</td>
                      <td>Hylla</td>
                      <td>Fack</td>
                  </tr>
                {{# each articles }}
                    <tr data-kartotekID="{{kartotek._id}}" data-operationId="{{operation}}" class="check-js" id={{_id}}>
                        <td><input class="form-control" type="checkbox" class="checkbox-js" id="{{_id}}"></td>
                        <td>{{ kartotek.name }}</td>
                        <td>{{ amount }}</td>
                        <td>{{ kartotek.storage }}</td>
                        <td>{{ kartotek.section }}</td>
                        <td>{{ kartotek.shelf }}</td>
                        <td>{{ kartotek.tray }}</td>
                    </tr>
                {{/each}}
              </table>
          </div>
      {{/if}}

        <button type="button" id="editButton" class="btn btn-primary">Spara</button>
    </form>
</div>
